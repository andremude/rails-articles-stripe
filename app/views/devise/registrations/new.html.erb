<div class="devise-container">
	<div class="screen">
		<div class="screen-content">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
    <h2>Sign Up</h2>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="devise-field">
					<i class="devise-input-icon fas fa-user"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"devise-input", placeholder:"Email" %>
				</div>
				<div class="devise-field">
					<i class="devise-input-icon fas fa-lock"></i>
          <%= f.password_field :password, autocomplete: "new-password", class:"devise-input", placeholder:"Password (6 characters min.)" %>
        </div>
				<div class="devise-field">
					<i class="devise-input-icon fas fa-lock"></i>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"devise-input", placeholder:"Password Confirmation" %>
        </div>
        <%= button_tag 'Sign Up <i class="devise-button-icon fas fa-chevron-right"></i> '.html_safe, type: 'submit', class: 'button devise-submit' %>
      <% end %>
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
	</div>
</div>
