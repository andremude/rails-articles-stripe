<div>
  <h2>My profile </h2>
  <div>
    <div>
      <div>
        <h3>
          My purchases
        </h3>
      </div>
    </div>

      <% if @articles.any? %>
        <ul>
          <% @articles.each do |article| %>
            <li><%= render 'articles/article', article: article %></li>
          <% end %>
        </ul>
      <% else %>
        You have not purchased any article.
      <% end %>
  </div>
</div>
